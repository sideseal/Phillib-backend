// It runs at 6 a.m everyday.

0 6 * * * python3 /home/ec2-user/phillib/backend/scrapper.py | tee -a '/home/ec2-user/logs/phillib.log' 2>&1 | mail -v -s "`date +\%y\%m\%d`: Crontab results" -r "<your@email.address> (ec2-phillib)" <your@email.address> &>/dev/null

// You need to set up `/etc/mail.rc` as follows:

set smtp=smtp.naver.com:587
set smtp-auth=login
set smtp-auth-user=<your@email.address>
set smtp-auth-password=<your email password>
set smtp-use-starttls
set ssl-verify=ignore
set nss-config-dir=/etc/pki/nssdb/
set from=<your@email.address>

// Just change `<your@email.address>` & `<your email password>` above to your information.
